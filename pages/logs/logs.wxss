.container {
  font-size: 9pt;
  font-family: "微软雅黑";
  letter-spacing:1px
}

.log-list {
  display: flex;
  flex-direction: column;
  padding: 40rpx;
}

.log-item {
  margin: 10rpx;
}

.margin-t {
  margin: 10px 0;
  padding: 10px 0;
}

.h5 {
  font-size: 12px;
}

.h4 {
  font-size: 14px;
}

.h3 {
  font-size: 16px;
}

.red {
  color: #f00;
}

.gray {
  color: #999;
}

.green {
  color: #393;
}

.b {
  font-weight: 500;
}

.image-icon {
  width: 18px;
  height: 18px;
}

.dur {
  text-decoration: line-through;
}

.padd {
  padding: 10px;
}

.pad-left {
  padding-left: 10px;
}

.borderB {
  border-bottom: 1px solid #e3e3e3;
}

.row {
  display: flex;
  justify-content: space-between;
}

.column {
  display: flex;
  flex-direction: column;
  line-height: 20px;
}

.bg-gray {
  background: #fbfbfb;
}

.block {
  display: block;
}


button {
  position: relative;
  background: none;
  padding: 5px 10px;
  line-height: 12px;
  font-size: 12px;
  margin: 5px;
  border-radius: 0px
}
input{height: auto;}
.active {
  border: 1px solid #f00;
}

