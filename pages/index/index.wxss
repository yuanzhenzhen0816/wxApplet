.location{
 padding: 10px;
}
.container{background: #f7f7f7}
.goods_list .item{background: #f7f7f7;}
.swiper {
  height: 400rpx;
  width: 100%;
}
.swiper image {
  height: 100%;
  width: 100%;
}
.goods_ul{
  width: 100%;
  
}
.goods_ul li{
  position: relative; overflow: hidden;
  height: 140px;
  width: 40%;
}
.goods_ul li:nth-child(2n-1){
    float: left;    
}
.goods_ul li:nth-child(2n){
  float: right;
}

.goods_list li{ border: 1px solid #e3e3e3;margin: 5px 0; padding: 13px 13px 0 13px;}
.goods-images{width: 100%;height: 90px; padding-bottom: 5px; }
.goods_list li p{display: block; width: 100%; text-align: left}
.locaImg{
  width: 30rpx;
  height: 30rpx;
}
.header-wapper view{width: 50%; text-align: center; display: inline-block; line-height: 30px;}
.header-wapper{ margin-bottom: 5px;}
